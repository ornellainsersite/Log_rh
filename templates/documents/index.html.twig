{% extends 'base.html.twig' %}

{% block title %}Documents index{% endblock %}

{% block body %}
        {% if not app.user %}
        <p>Veuillez vous connecter pour voir le contenu</p>
        {% else %}
    <h1>Documents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.title }}</td>
                <td>
                    <a href="{{ path('documents_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('documents_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endif %}
   


    <a href="{{ path('documents_new') }}">Create new</a>
{% endblock %}
